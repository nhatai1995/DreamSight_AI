# ============================================
# DreamSight AI - Environment Variables
# ============================================
# Copy this file to backend/.env and fill in your keys

# ===========================================
# REQUIRED: OpenAI API Key
# ===========================================
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# OPTIONAL: Hugging Face API Token
# ===========================================
# For AI image generation. Get your token at:
# https://huggingface.co/settings/tokens
HF_API_TOKEN=your_hugging_face_token_here
HF_IMAGE_MODEL=black-forest-labs/FLUX.1-schnell

# ===========================================
# Database Configuration
# ===========================================
CHROMA_DB_PATH=./chroma_db
DREAM_KNOWLEDGE_ZIP=dream_knowledge_db.zip

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# ===========================================
# Security & CORS
# ===========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# Rate Limiting (per IP)
# ===========================================
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=1 minute

# ===========================================
# Input Validation
# ===========================================
MAX_DREAM_LENGTH=500

# ===========================================
# Caching (for cost savings)
# ===========================================
CACHE_TTL=3600
CACHE_MAX_SIZE=100
